<!--pages/main/main.wxml-->

<view class="page">
 <view class="page__hd" bindtap="gotoRule">
        <view class="page__title" >{{activeTitle}}</view>
        <text class="page__desc" word-break = "break-word" word-wrap="break-all">{{activeContent}}</text>
    </view>
    
<view class="pageGroup">
    <view class="page__bd">
        <view class="weui-panel weui-panel_access">
            <view class="weui-panel__hd">队伍信息</view>
            <view class="weui-panel__bd">
            <view class="weui-cells weui-cells_in-small-appmsg" wx:for = "{{list}}" wx:key = "item" bindtap='onClickItem' data-item = "{{item}}">
                <view class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" >
                    <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                        <image class="weui-media-box__thumb" src="{{item.teamIcon}}" />
                    </view>
                    <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                        <view class="weui-media-box__title">{{item.teamName}}</view>
                        <view class="weui-media-box__desc">{{item.teamContent}}</view>
                    </view>
                </view>
                </view>
            </view>
        </view>
        </view>
        </view>
</view>